<Window x:Class="Gallery.MainWindow"
        Name="MyMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gallery"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        MinWidth="600"
        MinHeight="400">
    <Window.Resources>
        <!--<ControlTemplate x:Key="MyButton" TargetType="Button">
            <Border BorderBrush="Black" BorderThickness="2" TextBlock.FontSize="{TemplateBinding FontSize}">
                
            </Border>
        </ControlTemplate>-->
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="400" Height="4*"></RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition MinHeight="80" Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100"></ColumnDefinition>
                <ColumnDefinition Width="3" ></ColumnDefinition>
                <ColumnDefinition Width="auto" MinWidth="450"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition MinWidth="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold">Text</Label>
                <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" FontSize="18" FontWeight="Bold">Text</Label>
                <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Top" FontSize="18" FontWeight="Bold">Text</Label>
                <Label Grid.Column="0" Grid.Row="3" VerticalAlignment="Top" FontSize="18" FontWeight="Bold">Text</Label>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"></GridSplitter>
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"></GridSplitter>
            <Border Grid.Column="2" BorderBrush="#FF034972" BorderThickness="3">
                <Image Name="ImageViewer" Grid.Column="2" Margin="6"/>
            </Border>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Name="BtnOpenImage"
                        ToolTip="Open Image Library"
                        BorderThickness="0"
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Width="50" Height="50">
                    <Button Name="AddPicture"
                            Click="AddPicture_OnClick"
                            BorderThickness="0"
                            Background="Transparent">
                        <Image Source="bin/Debug/Icons/loadfile.png"></Image>
                    </Button>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="25" MinHeight="25"></RowDefinition>
                <RowDefinition MaxHeight="100" MinHeight="50"></RowDefinition>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel ButtonBase.Click ="ImagesPanel_OnClick"  Name = "ImagesPanel" Orientation="Horizontal">
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <GridSplitter Grid.Row="1"
                      HorizontalAlignment="Stretch"></GridSplitter>
    </Grid>
</Window>

